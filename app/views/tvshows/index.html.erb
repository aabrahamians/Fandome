<h1>All My tvshows!</h1>
<p>I've got <%= @tvshows.count %> shows ready to go!</p>
<%= link_to "New tvshow", new_tvshow_path %>
<% @tvshows.each do |b| %>
  <ul>
    <li>
      
      
      name: <%= link_to tvshow_characters_path(b.id) do %>
      <strong><%= b.name %></strong>
      <%end%>
      genre:  <strong><%= b.genre %></strong>

       <% if (current_user == b.user) %>
            <%= link_to 'Delete', b, method: :delete, data: { confirm: 'Are you sure?' } %>
            <%= link_to "edit", edit_tvshow_path(b) %>
      <% end %>

      
 
      
    </li>
  </ul>
<% end %>